<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cnicSubmissionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/LoginBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrowleft"
            android:contentDescription="Back Button"
            android:layout_gravity="start"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Cnic"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/app_font_poppins"

            android:layout_marginBottom="24dp"/>


        <!-- CNIC Number -->
        <EditText
            android:id="@+id/editTextCnic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CNIC Number"
            android:textSize="19sp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="number"
            android:fontFamily="@font/app_font_poppins"
            android:textColor="@color/black"
            android:textColorHint="#888888"
            android:background="@drawable/rounded_background"/>

        <!-- Select Image Button -->
        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select CNIC Image"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/app_font_poppins"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button"
            />

        <!-- ImageView to display selected image -->
        <ImageView
            android:id="@+id/imageViewCnic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"

            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_card" />

        <!-- Upload CNIC Button -->
        <Button
            android:id="@+id/buttonUploadCnic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button_save"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Upload CNIC" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
